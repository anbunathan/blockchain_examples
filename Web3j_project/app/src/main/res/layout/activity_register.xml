<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_light_yellow"
    tools:context="com.example.aurora.myweb3j.RegisterActivity">
    <EditText android:id="@+id/edit_username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="User Name"
        android:background="@android:color/background_light"
        android:textColorHint="@color/text_gray"
        android:textColor="@color/bg_black"
        android:layout_marginTop="143dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/button_register_ok"
        android:onClick="onRegister_ok"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/edit_userphone"
        android:layout_alignStart="@+id/edit_userphone"
        android:background="@color/text_yellow"/>

    <EditText android:id="@+id/edit_userphone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Mobile Phone"
        android:layout_margin="15dp"
        android:background="@android:color/background_light"
        android:textColorHint="@color/text_gray"
        android:textColor="@color/bg_black"
        android:layout_below="@+id/edit_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />
</RelativeLayout>
